          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID van de gebruiker"
          }
        ],
        "responses": {
          "200": {
            "description": "Gebruiker succesvol gepromoveerd naar docent",
