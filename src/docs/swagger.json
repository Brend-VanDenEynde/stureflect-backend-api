  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Unieke gebruiker ID"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "E-mailadres van de gebruiker"
          },
          "name": {
            "type": "string",
            "description": "Volledige naam van de gebruiker"
          },
          "role": {
            "type": "string",
            "enum": ["student", "teacher", "admin"],
            "description": "Rol van de gebruiker"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "description": "Foutmelding"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "JWT Token authentication. BELANGRIJK: Voeg het token toe in de Authorization header, NIET in de request body. Format: 'Authorization: Bearer <your_jwt_token>'. Verkrijg een token via /users/login of /users/register."
      }
    }
  }
